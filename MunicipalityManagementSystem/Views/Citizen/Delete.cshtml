@model MunicipalityManagementSystem.Models.CitizenManagement


@{
    ViewData["Title"] = "Delete Citizen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Citizen</h2>

<p>Are you sure you want to delete the following citizen?</p>

<table class="table">
    <tr>
        <th>Full Name</th>
        <td>@Model.FullName</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>Phone Number</th>
        <td>@Model.PhoneNumber</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Date of Birth</th>
        <td>@Model.DateOfBirth?.ToString("yyyy-MM-dd")</td>
    </tr>
</table>

<form asp-controller="Citizen" asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="id" value="@Model.CitizenID" />

    <button type="submit" class="btn btn-danger">Delete Citizen</button>

    <a href="@Url.Action("Index", "Citizen")" class="btn btn-secondary">Cancel</a>
</form>