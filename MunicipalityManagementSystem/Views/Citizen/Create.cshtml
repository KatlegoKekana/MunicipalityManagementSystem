@model MunicipalityManagementSystem.Models.CitizenManagement

@{
    ViewData["Title"] = "Create New Citizen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Citizen</h2>

<!-- Form to create a new citizen -->
<form asp-controller="Citizen" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="FullName">Full Name</label>
        <input type="text" class="form-control" id="FullName" name="FullName" required />
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="DateOfBirth">Date of Birth</label>
        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" />
    </div>

    
    <button type="submit" class="btn btn-primary">Create Citizen</button>

    <a href="@Url.Action("Index", "Citizen")" class="btn btn-secondary">Back to List</a>
</form>

