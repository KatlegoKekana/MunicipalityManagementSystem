@model MunicipalityManagementSystem.Models.ServiceRequest


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Service Request</h2>

<p>Are you sure you want to delete this service request?</p>

<table class="table">
    <tr>
        <th>Request ID</th>
        <td>@Model.ServiceRequestID</td>
    </tr>
    <tr>
        <th>Citizen ID</th>
        <td>@Model.CitizenID</td>
    </tr>
    <tr>
        <th>Service Type</th>
        <td>@Model.ServiceRequestType</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@Model.Status</td>
    </tr>
</table>

<form asp-controller="ServiceRequest" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="RequestID" />

    <button type="submit" class="btn btn-danger">Delete</button>

    <a href="@Url.Action("Index", "ServiceRequest")" class="btn btn-secondary">Cancel</a>
</form>

