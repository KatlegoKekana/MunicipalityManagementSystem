@model MunicipalityManagementSystem.Models.ServiceRequest


@{
    ViewData["Title"] = "Edit Service Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Service Request</h2>

<form asp-controller="ServiceRequest" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="RequestID" />
    <div class="form-group">
        <label>Citizen ID</label>
        <input asp-for="CitizenID" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Service Type</label>
        <input asp-for="ServiceType" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control">
            <option>Pending</option>
            <option>Completed</option>
        </select>
    </div>

    <button type="submit" class="btn btn-warning">Update</button>

    <a href="@Url.Action("Index", "ServiceRequest")" class="btn btn-secondary">Back to List</a>
</form>
