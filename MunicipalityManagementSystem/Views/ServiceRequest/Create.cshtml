@model MunicipalityManagementSystem.Models.ServiceRequest


@{
    ViewData["Title"] = "Create Service Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Create Service Request</h2>

<form asp-controller="ServiceRequest" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Citizen ID</label>
        <input asp-for="CitizenID" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Service Type</label>
        <input asp-for="ServiceType" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Request Date</label>
        <input asp-for="RequestDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control">
            <option>Pending</option>
            <option>Completed</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>

    <a href="@Url.Action("Index", "ServiceRequest")" class="btn btn-secondary">Back to List</a>
</form>

