@model IEnumerable<MunicipalityManagementSystem.Models.StaffManagement>


@{
    ViewData["Title"] = "Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Staff List</h2>

<a class="btn btn-primary" href="@Url.Action("Create", "Staff")">Add Staff</a>

<table class="table">
    <thead>
        <tr>
            <th>Staff ID</th>
            <th>Full Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Hire Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StaffID</td>
                <td>@item.FullName</td>
                <td>@item.Position</td>
                <td>@item.Department</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.HireDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.StaffID })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", new { id = item.StaffID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.StaffID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>